<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:weightSum="100">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="65"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/eprabhu" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear1s2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/linear1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                app:cardElevation="0dp">


                <LinearLayout
                    android:id="@+id/linearmobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rippleeffect"
                    android:layout_gravity="center_horizontal"
                       android:orientation="vertical">
                    <!--<com.skyfishjy.library.RippleBackground-->
                        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
                        <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:id="@+id/content"-->
                        <!--app:rb_color="#785855"-->
                        <!--app:rb_radius="32dp"-->
                        <!--android:layout_gravity="center_horizontal"-->
                        <!--app:rb_rippleAmount="1"-->
                        <!--app:rb_duration="3000"-->
                        <!--app:rb_scale="6">-->
                    <ImageView
                        android:id="@+id/imgmobile"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/bill_payment" />
                    <!--</com.skyfishjy.library.RippleBackground>-->
                    <!--</com.andexert.library.RippleView>-->
                    <TextView
                        android:id="@+id/txtxmobile"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Mobile Topup"
                        android:textColor="#FFB7392E"
                        android:textStyle="bold"
                        android:textSize="12dp" />


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/linearrecharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/imgrecharge"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:src="@drawable/recharge_card" />

                    <TextView
                        android:id="@+id/txtxrecharge"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:textColor="#FFB7392E"
                        android:text="Recharge Pin "
                        android:textStyle="bold"
                        android:textSize="12dp" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view50"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:padding="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/linearbill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgbill"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:src="@drawable/bill_payment" />

                    <TextView
                        android:id="@+id/txtbill"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Bill Payment"
                        android:textColor="#FFB7392E"
                        android:textStyle="bold"
                        android:textSize="12dp" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
        <!--nextlinearlayout-->
        <LinearLayout
            android:id="@+id/linear_row2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/linear1s2"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:weightSum="3">


            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:padding="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/linearmoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgtransfer"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:src="@drawable/money_transfer" />

                    <TextView

                        android:id="@+id/txttransfer"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Money Transfer"
                        android:textColor="#FFB7392E"
                        android:textStyle="bold"
                        android:textSize="12dp" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:padding="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/lineartravel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/imgtravel"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:src="@drawable/travel_tickets" />

                    <TextView
                        android:id="@+id/txttravel"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Travel Ticket"
                        android:textColor="#FFB7392E"
                        android:textStyle="bold"
                        android:textSize="12dp" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view20"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:padding="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/linearinsurance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/imginsurance"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:src="@drawable/insurance" />

                    <TextView

                        android:id="@+id/txtinsurance"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Insurance Premium"
                        android:textColor="#FFB7392E"
                        android:textStyle="bold"
                        android:textSize="12dp" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
        <!--nextlinearlayout-->
        <!--<LinearLayout-->
        <!--android:id="@+id/linear_row20"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:layout_below="@+id/linear_row2"-->
        <!--android:orientation="horizontal"-->
        <!--android:weightSum="100">-->


        <!--</LinearLayout>-->


        <!--nextlinearlayout-->
        <!--nextlinearlayout-->
        <!--nextlinearlayout-->
        <!--nextlinearlayout-->


    </RelativeLayout>




</android.support.constraint.ConstraintLayout>